{
  "name": "audiodeck",
  "version": "1.0.0",
  "description": "A modern web application for creating and managing audio clips from various video platforms",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "start:prod": "cd backend && npm run start:prod",
    "clean": "cd backend && node cleanup.js",
    "restart": "npm run clean && npm run dev",
    "start:dev": "node scripts/start-dev.js",
    "start:prod": "node scripts/start-prod.js"
  },
  "keywords": [
    "audio",
    "soundboard",
    "youtube",
    "tiktok",
    "twitch",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  },
  "bugs": {
    "url": "your-repo-url/issues"
  },
  "homepage": "your-repo-url#readme"
} 